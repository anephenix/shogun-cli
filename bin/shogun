#!/usr/bin/env node

'use strict';

// Dependencies
const commander = require('commander');
const lib = require('../index');
const pkgjson = require('../package.json');

commander
  .version(pkgjson.version)

commander
	.command('signup')
	.action(lib.signup);

commander
  .command('start')
  .action(lib.start);

commander
  .command('stop')
  .action(lib.stop);

commander
  .command('finish')
  .action(lib.finish);

commander.parse(process.argv);
